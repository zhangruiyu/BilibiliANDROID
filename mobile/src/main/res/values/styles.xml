<resources>
    <!-- Base application theme. -->
    <style name="BilibiliBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BilibiliBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bannerSelectColor">@color/themeBanner_NormalColor</item>
        <item name="themeTextColor">@color/themeTextColor_NormalColor</item>
        <item name="themeBgColor">@color/themeBgColor_NormalColor</item>

        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
        <item name="android:windowBackground">@color/color_eaeaea</item>
    </style>


    <!--黑夜主题-->
    <style name="AppTheme.Black" parent="BilibiliBaseTheme">

        <item name="themeTextColor">@color/themeTextColor_NightColor</item>
        <item name="bannerSelectColor">@color/themeBanner_NightColor</item>
        <item name="themeBgColor">@color/themeBgColor_NightColor</item>

        <item name="colorPrimaryDark">@color/status_grey</item>
        <item name="android:statusBarColor">@color/status_grey</item>
        <item name="colorPrimary">@color/action_grey</item>
        <item name="android:windowBackground">@color/window_bg_grey</item>
        <item name="android:colorForeground">@color/fg_grey</item>
        <item name="android:colorBackground">@color/bg_grey</item>
        <item name="colorAccent">@color/control_activated_grey</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white_text</item>
        <item name="android:textColorPrimary">@color/white_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- toolbar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
    </style>
    <!--  把toolbar离屏幕距离设置为0-->
    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarMenuTextSize">14</style>

    <style name="recommend_title_textview">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">@color/black_87pc</item>
    </style>

</resources>
